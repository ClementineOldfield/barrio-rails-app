<h1><%= header %></h1>

<% if listings.count > 0 %>
  <% listings.each do |listing| %>
    <div class="card">
      <%= link_to listing_path(listing.id) do %>
        <%= image_tag(listing.image, class: "listing-image") if listing.image.attached? %>
        <p>
          <%= listing.title %>
        </p>
      <% end %>
    </div>
  <% end %>
<% else %>
  <p>You don't have any favourited posts yet.</p>
<% end %>
