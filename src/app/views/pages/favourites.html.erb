<div class="dashboard flex-container">
  <div class="categories section">
    <%= render "dash_side", categories: @categories %>
  </div>
  <div class="recent-listings">
    <div class="panel section">
      <%= render "shared/listings", header: "Favourites", listings: current_user.favourite_listings %>
    </div>
  </div>
  <div class="col">
    <ul class="links float">
      <li><%= link_to "My Profile", user_path(current_user[:id]) %></li>
      <li><%= link_to "Settings", edit_user_registration_path %></li>
      <li><%= link_to "My Purchase History", purchase_history_path(current_user[:id]) %></li>
    </ul>
  </div>
</div>