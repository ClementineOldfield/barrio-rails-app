<div class="flex-container">
  <div class="col">
    <h2>Saved Listings</h2>
    <%= render "shared/listings", header: "Favourite", listings: @favourites %>
  </div>
  <div class="col-2">
    <h2>Recent Listings</h2>
    <%= render "shared/listings", header: "Recent", listings: @listings %>
  </div>
  <div class="col">
    <ul>
      <li><%= link_to "My Profile", user_path(current_user[:id]) %></li>
      <li><%= link_to "Settings", edit_user_registration_path %></li>
      <li><%= link_to "My Purchase History", purchase_history_path(current_user[:id]) %></li>
    </ul>
  </div>
</div>