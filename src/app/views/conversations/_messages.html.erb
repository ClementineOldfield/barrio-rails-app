<h2>Conversation messages</h2>

<% conversation.messages.each do |message| %>
  <div class="message <%= @current_user_class if message.user == current_user %>">
    <p class="author">
      <%= sanitize message.user.first_name %>
      <%= message.created_at %>
    </p>
    <p class="message-body">
      <%= sanitize message.body %>
    </p>
  </div>
<% end %>